<view class="page-wrapper ">
  <form bindsubmit="addNote">
    <scroll-view scroll-y="true" class="note-content">
      <textarea name="content" placeholder="请输入正文"  value="{{content}}"></textarea>
    </scroll-view>
    <view class="note-bottom-wrapper">
      <button class="note-bottom" form-type="submit">保存</button>
    </view>
  </form>
</view>